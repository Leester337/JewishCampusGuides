<center>
<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item">
        <img id="carousel" src=<%= ("'" + @first.picture + "'").html_safe %> >
        <div class="carousel-caption">
            <h4><%= @first.name %></h4>
            <p><%= @first.event_creator.college.name %></p>
        </div>
    </div>
    <div class="item">
        <img id="carousel" src=<%= ("'" + @second.picture + "'").html_safe %> >
        <div class="carousel-caption">
            <h4><%= @second.name %></h4>
            <p><%= @second.event_creator.college.name %></p>
        </div>
    </div>
    <div class="item">
        <img id="carousel" src=<%= ("'" + @third.picture + "'").html_safe %> >
        <div class="carousel-caption">
            <h4><%=  @third.name %></h4>
            <p><%= @third.event_creator.college.name %></p>
        </div>
    </div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div> 
</center>